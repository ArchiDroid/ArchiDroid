# Read -> generic, ARG2 only
# Write -> generic

if [[ -e "$1" ]]; then
	if [[ -n "$2" ]]; then
		echo "$2" > "$1"
	else
		awk '{print $2}' < "$1"
	fi
else
	echo "0"
fi
