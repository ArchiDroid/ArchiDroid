# Read -> return current status (alive) of the service/process
# Write -> start/stop given service/process, if needed

if [[ -n "$1" ]]; then
	BIN_PATH="$(which "$1")"
	if [[ -f "$BIN_PATH" ]]; then
		if pidof "$1" >/dev/null 2>&1; then
			PROCESS_ALIVE=1
		else
			PROCESS_ALIVE=0
		fi
		if [[ -n "$2" ]]; then
			if [[ "$2" -eq 1 && "$PROCESS_ALIVE" -eq 0 ]]; then
				start "$1"
			elif [[ "$2" -eq 0 && "$PROCESS_ALIVE" -eq 1 ]]; then
				stop "$1"
			fi
		else
			echo "$PROCESS_ALIVE"
		fi
	else
		echo "0"
	fi
else
	echo "0"
fi
