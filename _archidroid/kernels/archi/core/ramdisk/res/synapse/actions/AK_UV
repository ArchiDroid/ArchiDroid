# Read -> return current value for given $2 step from $1
# Write -> set $3 value for given $2 step in $1

SYSFS_FILE="$1"
TARGET_TYPE="$2"
TARGET_VALUE="$3"

if [[ -e "$SYSFS_FILE" ]]; then
	if [[ -z "$TARGET_VALUE" ]]; then # Read mode
		sed -e 's/mhz://g;s/uV//g' < "$SYSFS_FILE" | while read UV_TABLE; do
			FREQ="$(echo "$UV_TABLE" | awk '{print $1}')"
			if [[ "$FREQ" -eq "$TARGET_TYPE" ]]; then
				echo "$UV_TABLE" | awk '{print $2}' # Synapse return
				break
			fi
		done
	else # Write mode
		SYSFS_WRITE="$(
			sed -e 's/mhz://g;s/uV//g' < "$SYSFS_FILE" | (while read UV_TABLE; do
				FREQ="$(echo "$UV_TABLE" | awk '{print $1}')"
				if [[ "$FREQ" -eq "$TARGET_TYPE" ]]; then
					SYSFS_WRITE+=" $TARGET_VALUE"
				else
					VALUE="$(echo "$UV_TABLE" | awk '{print $2}')"
					SYSFS_WRITE+=" $VALUE"
				fi
			done
			echo "$SYSFS_WRITE")
		)"
		echo "$SYSFS_WRITE" > "$SYSFS_FILE" # Write effect
	fi
else
	echo "0"
fi
